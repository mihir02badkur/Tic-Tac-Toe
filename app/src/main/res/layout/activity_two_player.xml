<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".twoPlayerActivity"
    android:background="@drawable/twoact">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:text="2 Player Game"
                android:textAllCaps="true"
                android:textColor="#E9A51E"
                android:textSize="40sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textColor="#E9A51E"
                android:textSize="100sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/playerName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="20dp"
                android:ems="10"
                android:hint="X-  Enter Player 1 Name"
                android:inputType="textPersonName"
                android:textColor="#E9A51E"
                android:textColorHint="#FF9800"
                android:textColorLink="#E9A51E"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O"
                android:textColor="#E9A51E"
                android:textSize="100sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/playerName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:ems="10"
                android:hint="O- Enter Player 2 Name"
                android:inputType="textPersonName"
                android:textColor="#E9A51E"
                android:textColorHint="#FF9800"
                android:textColorLink="#E9A51E"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:onClick="startGame"
                android:text="START"
                android:textSize="30sp"
                app:backgroundTint="#CA0E00" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>