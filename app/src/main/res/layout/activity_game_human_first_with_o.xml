<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gameHumanFirstWithO"
    android:background="@drawable/gamettt">

        <LinearLayout
            android:id="@+id/linearLayout21x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView1x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:layout_weight="1"
                android:text="@string/heading"
                android:textColor="#000000"
                android:textSize="50sp"
                android:textStyle="bold"
                app:fontFamily="cursive" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView1x"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/grid"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/linearLayout21x"
            app:srcCompat="@drawable/grid" />

        <LinearLayout
            android:id="@+id/linearLayout1x"
            android:layout_width="0dp"
            android:layout_height="420dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/imageView1x"
            app:layout_constraintEnd_toEndOf="@+id/imageView1x"
            app:layout_constraintStart_toStartOf="@+id/imageView1x"
            app:layout_constraintTop_toTopOf="@+id/imageView1x">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView01x"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="playerTap"
                    android:padding="20sp"
                    android:tag="0" />

                <ImageView
                    android:id="@+id/imageView11x"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="playerTap"
                    android:padding="20sp"
                    android:tag="1" />

                <ImageView
                    android:id="@+id/imageView21x"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="playerTap"
                    android:padding="20sp"
                    android:tag="2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView31x"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="playerTap"
                    android:padding="20sp"
                    android:tag="3" />

                <ImageView
                    android:id="@+id/imageView41x"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="playerTap"
                    android:padding="20sp"
                    android:tag="4" />

                <ImageView
                    android:id="@+id/imageView51x"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="playerTap"
                    android:padding="20sp"
                    android:tag="5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView61x"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="playerTap"
                    android:padding="20sp"
                    android:tag="6" />

                <ImageView
                    android:id="@+id/imageView71x"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="playerTap"
                    android:padding="20sp"
                    android:tag="7" />

                <ImageView
                    android:id="@+id/imageView81x"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="playerTap"
                    android:padding="20sp"
                    android:tag="8" />
            </LinearLayout>

        </LinearLayout>

    <TextView
        android:id="@+id/status1x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15sp"
        android:text="@string/statusBotXFirst"
        android:textSize="28sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1x" />


</androidx.constraintlayout.widget.ConstraintLayout>